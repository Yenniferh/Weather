<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="SubtitleStyle">
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginBottom">@dimen/text_margin</item>
        <item name="android:fontFamily">@font/eb_garamond</item>
        <item name="android:textColor">@color/blue_200</item>
        <item name="android:textSize">@dimen/subtitle</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_marginStart">@dimen/text_margin</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textColor">@color/blue_100</item>
        <item name="android:textSize">@dimen/title</item>
    </style>

    <style name="CardStyle">
        <item name="android:layout_marginTop">@dimen/small_margin_bottom</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
    </style>

    <style name="TitleStyleWeather">
        <item name="android:layout_marginStart">@dimen/small_margin</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textColor">@color/blue_100</item>
        <item name="android:textSize">@dimen/title</item>
    </style>
</resources>
